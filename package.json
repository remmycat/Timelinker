{
    "name": "timelinker",
    "productName": "Timelinker",
    "author": {
        "name": "Remmy Stock"
    },
    "version": "1.0.0-alpha.6",
    "license": "UNLICENSED",
    "description": "A Social Timeline Column-Browser",
    "keywords": [],
    "main": "electron/main.js",
    "scripts": {
        "start": "cross-env BROWSER=none react-scripts start",
        "build": "cross-env PUBLIC_URL=. react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "electron:main": "wait-port 3000 && electron .",
        "electron:cra": "npm run start",
        "dev": "run-p -r electron:*",
        "dist": "npm run build && electron-builder",
        "dist:all": "npm run build && electron-builder -mwl",
        "dist:pack": "npm run build && electron-builder --dir"
    },
    "dependencies": {
        "cross-env": "^5.2.0",
        "electron-context-menu": "^0.12.0",
        "electron-dl": "^1.14.0",
        "electron-store": "3.1.0",
        "electron-util": "^0.11.0",
        "glob": "^7.1.3",
        "npm-run-all": "^4.1.5",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.7",
        "@types/electron-store": "^1.3.1",
        "@types/react": "^16.8.13",
        "@types/react-beautiful-dnd": "^11.0.0",
        "@types/react-dom": "^16.8.4",
        "@types/react-helmet": "^5.0.8",
        "@types/uuid": "^3.4.4",
        "@types/wcag-contrast": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "@typescript-eslint/parser": "^1.6.0",
        "classnames": "^2.2.6",
        "electron": "^4.1.4",
        "electron-builder": "^20.39.0",
        "electron-devtools-installer": "^2.2.4",
        "electron-reloader": "^0.2.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react-hooks": "^1.6.0",
        "node-sass": "^4.11.0",
        "prepend-http": "^2.0.0",
        "prettier": "^1.17.0",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-beautiful-dnd": "^11.0.0",
        "react-dom": "^16.8.6",
        "react-feather": "^1.1.6",
        "react-helmet": "^5.2.0",
        "react-scripts": "2.1.8",
        "typescript": "^3.4.3",
        "wait-port": "^0.2.2",
        "wcag-contrast": "^2.1.1"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "fluid": false
    },
    "build": {
        "appId": "com.electron.timelinker",
        "files": [
            "build/**/*",
            "electron/**/*"
        ],
        "extends": null,
        "directories": {
            "buildResources": "electron/assets"
        },
        "mac": {
            "category": "public.app-category.social-networking"
        },
        "linux": {
            "category": "Network"
        }
    }
}
